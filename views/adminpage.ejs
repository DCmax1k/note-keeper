<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>!ADMIN <%= user.username %>!</title>
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.13.0/css/all.css"
      integrity="sha384-Bfad6CLCknfcloXFOyFnlgtENryhrpZCe29RTifKEixXQZ38WheV+i/6YWSzkz3V"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        background: linear-gradient(to right, grey, lightgrey);
      }
      header {
        height: 80px;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        border-bottom: 1px solid black;
      }
      header a {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        left: 10%;
        cursor: pointer;
        font-size: 23px;
        border: 1px solid black;
        background-color: black;
        color: white;
        padding: 8px;
        border-radius: 10px;
        transition: all 0.3s ease;
        text-decoration: none;
      }
      .information {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 10px;
      }
      #grantAdminSubmit {
        color: blue;
        background-color: transparent;
        border: 1px solid black;
        border-radius: 2px;
        padding: 2px;
        cursor: pointer;
        margin-top: 3px;
        transition: all 0.3s ease;
      }
      #grantAdminSubmit:hover {
        background-color: blue;
        color: white;
      }
      #adminDeleteSubmit {
        color: red;
        background-color: transparent;
        border: 1px solid black;
        border-radius: 2px;
        padding: 2px;
        cursor: pointer;
        margin-top: 5px;
        transition: all 0.3s ease;
      }
      #adminDeleteSubmit:hover {
        background-color: red;
        color: white;
      }
      .show-notes {
        border: 1px solid black;
        border-radius: 50%;
        height: 15px;
        width: 15px;
        display: inline-flex;
        justify-content: center;
        align-items: center;
        transform: translateY(10%);
        cursor: pointer;
        transition: all 0.3s ease;
      }
      .notes-shown-btn {
        transform: translateY(10%) rotate(90deg);
      }
      .notes {
        transform: translateX(50px);
        visibility: hidden;
        height: 0;
        width: 0;
      }
      .show-user-notes {
        visibility: visible;
        height: auto;
        width: auto;
      }
      @media screen and (max-width: 600px) {
        header {
          justify-content: space-around;
        }
        header a {
          left: 15px;
        }
        header h1 {
          position: absolute;
          top: 50%;
          left: 90px;
          transform: translateY(-50%);
        }
      }
      @media screen and (max-width: 400px) {
        header h1 {
          font-size: 25px;
        }
      }
      @media screen and (max-width: 350px) {
        header h1 {
          font-size: 20px;
        }
        .body-cont {
          font-size: 13px;
        }
      }
      @media screen and (max-width: 280px) {
        header h1 {
          font-size: 17px;
        }
        .body-cont {
          font-size: 10px;
        }
      }
      @media screen and (max-width: 260px) {
        header h1 {
          font-size: 15px;
        }
        .body-cont {
          font-size: 10px;
        }
      }
    </style>
    <header>
      <a href="/settings/<%= user.username %>?k=<%= user._id %>">Back</a>
      <h1>!ADMIN <%= user.username %>!</h1>
    </header>
    <div class="body-cont">
      <div class="information">
        <ol>
          <% allusers.forEach((aUser, i) => { %>
          <li>
            &nbsp;
            <ul>
              <li>Username: <b><%= aUser.username %></b></li>
              <li>Password: <%= aUser.password %></li>
              <li>Email: <%= aUser.email %></li>
              <li>
                Notes: <i class="show-notes fas fa-caret-right"></i>
                <div id="notes<%= i %>" class="notes">
                  <ol>
                    <% aUser.notes.forEach((note, j) => { %>
                    <li class="user-note">
                      <%= note %>
                    </li>
                    <% }) %>
                  </ol>
                </div>
              </li>
              <% if (aUser.rank !== 'admin') { %>
              <li>Rank: <%= aUser.rank %></li>
              <li>
                <form
                  id="grantAdminForm"
                  method="POST"
                  action="/settings/<%= user._id %>/<%= aUser.username %>?k=<%= aUser._id %>"
                >
                  <button type="submit" id="grantAdminSubmit">
                    !Grant Admin!
                  </button>
                </form>
              </li>
              <li>
                <form
                  id="adminDeleteForm"
                  method="POST"
                  action="/settings/<%= user._id %>/<%= aUser.username %>/admindelete?k=<%= aUser._id %>"
                >
                  <button type="submit" id="adminDeleteSubmit">
                    !Delete Account!
                  </button>
                </form>
              </li>
              <% } else { %>
              <li>
                Rank:
                <b
                  ><span style="color: rgb(139, 0, 0);"
                    ><%= aUser.rank %>
                  </span></b
                >
              </li>
              <% } %>
            </ul>
          </li>
          <% }) %>
        </ol>
      </div>
    </div>
    <script>
      const showNotes = document.querySelectorAll('.show-notes');
      const eachNote = document.querySelectorAll('.notes');

      showNotes.forEach((showNotesBtn, i) => {
        showNotesBtn.addEventListener('click', () => {
          showNotesBtn.classList.toggle('notes-shown-btn');
          showNotesFor(i);
        });
      });

      function showNotesFor(index) {
        const usersNotes = document.getElementById(`notes${index}`);
        usersNotes.classList.toggle('show-user-notes');
      }
    </script>
  </body>
</html>
